<!doctype html>
<html lang="pt-BR">
  <%- include('includes/head') %>

  <body>
    <%- include('includes/nav') %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
          <h1 class="display-1 text-center">Agenda</h1>
          <p class="text-center lead">Seus contatos estão abaixo: </p>

          <% include('includes/messages') %>

          <% if(contatos.length > 0) { %>
            <div class="responsive-table">
              <table class="table my-3">
                <% contatos.forEach(contato => { %>
                  <tr>
                    <td><%= contato.nome %></td>
                    <td><%= contato.snome %></td>
                    <td><%= contato.telefone %></td>
                    <td><%= contato.email %></td>
                    <td><a href="/contato/<%= contato.id %>">Edit</a></td>
                    <td><a class="text-danger" href="/contato/delete/<%= contato.id %>">Delete</a></td>
                  </tr>
                <% }); %>
              </table>
            </div>
          <% } else { %>
            <div class="alert alert-danger">Não há contatos cadastrados</div>
          <% } %>

        </div>

        <div class="col-lg-2"></div>
      </div>
    </div>

    <%- include('includes/footer') %>
  </body>
</html>
