<!doctype html>
<html lang="pt-BR">
  <%- include('includes/head') %>

  <body>
    <%- include('includes/nav') %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
          <h1 class="text-center">Cadastro </h1>
          <p class="text-center lead">Cadastre ou edite um contato em sua agenda</p>

          <%- include('includes/messages'); %>

          <% if(contato._id) { %>
            <form action="/contato/edit/<%= contato._id %>" method="post">
          <% } else { %>
            <form action="/contato" method="post">
          <% } %>
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              
              <div class="mb-3">
                  <label class="form-label">Nome</label>
                  <input value="<%= contato.nome ? contato.nome : '' %>" type="text" class="form-control" name="nome">
              </div>
              <div class="mb-3">
                  <label class="form-label">Sobrenome</label>
                  <input value="<%= contato.snome ? contato.snome : '' %>" type="text" class="form-control" name="snome">
              </div>
              <div class="mb-3">
                  <label class="form-label">Email</label>
                  <input value="<%= contato.email ? contato.email : '' %>" type="email" class="form-control" name="email">
              </div>
              <div class="mb-3">
                  <label class="form-label">Telefone</label>
                  <input value="<%= contato.telefone ? contato.telefone : '' %>" type="tel" class="form-control" name="telefone">
              </div>
              <button type="submit" class="btn btn-success">Salvar</button>
          </form>
        </div>

        <div class="col-lg-2"></div>
      </div>
    </div>

    <%- include('includes/footer') %>
  </body>
</html>
